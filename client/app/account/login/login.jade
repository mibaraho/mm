          | &#x9;&#x9;&#x9;&#x9;
          li.p-0
            a.btn.btn-sm.btn-lightred.b-0.btn-rounded-20(href='javascript:;')
              i.fa.fa-google-plus
          | &#x9;&#x9;&#x9;&#x9;
          li.p-0
            a.btn.btn-sm.btn-primary.b-0.btn-rounded-20(href='javascript:;')
              i.fa.fa-linkedin
